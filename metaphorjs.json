{
    "version": "2.0.0",
    "description": "MetaphorJs namespace system",

    "docs": {
        "out": "docs",
        "renderer": {
            "type": "default",
            "data": {
                "title": "MetaphorJs.lib.Namespace",
                "version": "2.0.0"
            }
        },
        "hooks": [
            "src-docs/hooks"
        ],
        "src": [
            "src/lib/Namespace.js"
        ],
        "includeExternal": false
    },

    "build": {
        "umd-min": {
            "library": "MetaphorJsNamespace",
            "target": "dist/metaphorjs.namespace.min.js",
            "export": "MetaphorJs.lib.Namespace",
            "useCC": false,
            "files": [
                "src/lib/Namespace.js"
            ]
        }
    }
}