{
    "version": "2.0.0",
    "description": "MetaphorJs namespace system",

    "docs": {
        "out": "docs",
        "renderer": {
            "type": "default",
            "data": {
                "title": "MetaphorJs.Namespace",
                "version": "2.0.0"
            }
        },
        "hooks": [
            "src-docs/hooks"
        ],
        "src": [
            "src/lib/Namespace.js"
        ],
        "includeExternal": false
    },

    "build": {
        "standalone": {
            "target": "dist/metaphorjs.namespace.js",
            "files": [
                ["src/lib/Namespace.js", {"as": "*"}]
            ],
            "options": {
                "wrap": true,
                "global": true,
                "expose": [
                    "Namespace"
                ]
            }  
        },

        "standalone-min": {
            "extend": "standalone",
            "target": "dist/metaphorjs.namespace.min.js",
            "pipe": ["build", "compile", "write"]
        },

        "npm": {
            "target": "dist/metaphorjs.namespace.npm.js",
            "files": [
                ["src/lib/Namespace.js", {"as": "*"}]
            ],
            "options": {
                "exports": "Namespace"
            }
        },
        
        "amd": {
            "target": "dist/metaphorjs.namespace.amd.js",
            "files": [
                ["src/lib/Namespace.js", {"as": "*"}]
            ],
            "options": {
                "amd": {
                    "name": "metaphorjs-namespace",
                    "return": "Namespace"
                }
            }
        },

        "amd-min": {
            "extend": "amd",
            "target": "dist/metaphorjs.namespace.amd.min.js",
            "pipe": ["build", "compile", "write"]
        }
    }
}